<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0F">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <TextView
                android:id="@+id/title_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_dashboard"
                android:textColor="#B4B0FF"
                android:textSize="32sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/date_weather_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/title_dashboard">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:id="@+id/tv_selected_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Date"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="--Â°C"
                        android:textColor="@color/cyan_accent"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#9DB4D1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/tv_sunset_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="ðŸŒ… --:--"
                        android:textColor="#9DB4D1"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#9DB4D1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/tv_sunrise_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="ðŸŒ„ --:--"
                        android:textColor="#9DB4D1"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kpi_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/date_weather_container">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kpi_average"
                        android:textColor="#5A5A6B"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_kpi_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="--h --m"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kpi_best"
                        android:textColor="#5A5A6B"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_kpi_best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="--%"
                        android:textColor="@color/cyan_accent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kpi_worst"
                        android:textColor="#5A5A6B"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_kpi_worst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="--%"
                        android:textColor="#FF6B6B"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/daily_summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#1A1A23"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/kpi_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_night_label"
                        android:textColor="#B4B0FF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_sleep_duration"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            tools:text="--h --m"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/tv_sleep_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="--"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bar_chart_card"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#1A1A23"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/daily_summary_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chart_duration_title"
                        android:textColor="#B4B0FF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/sleep_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/line_chart_card"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#1A1A23"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/bar_chart_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chart_quality_title"
                        android:textColor="#B4B0FF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/quality_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="34dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="#B4B0FF"
        app:tint="#0A0A0F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>